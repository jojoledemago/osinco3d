l0 = 1. 
u0 = 1.
re = 1000.
ratio = -1.
/End

!<--------------->!
&Domain
!<--------------->!
nx = 257
ny = 257
nz =  65 

xlx = 16.
yly = 16. 
zlz =  4.

x0 = -8 
y0 = -8. 
z0 = -2. 
/End

!<--------------->!
&BoundaryConditions
!<--------------->!
nbcx1 = 0 
nbcxn = 0 
nbcy1 = 1 
nbcyn = 1 
nbcz1 = 0 
nbczn = 0 
sim2d = 0
/End

