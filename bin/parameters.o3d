ici = 2  !> Initial conditions (0: classic, 1: oscillations, 2: noise, 3: both)
init_noise_x = 0.00 !> Turbulence intensity (1=100%) !! Intiale condition
init_noise_y = 0.03 !> Turbulence intensity (1=100%) !! Intiale condition
